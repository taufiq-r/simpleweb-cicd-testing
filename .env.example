# Environment variables template for docker-compose and deployments
# Copy to .env and fill in actual values

# Database
POSTGRES_USER=app
POSTGRES_PASSWORD=changeme
POSTGRES_DB=appdb

# PGBouncer
PGBOUNCER_POOL_MODE=transaction
PGBOUNCER_MAX_CLIENT_CONN=100
PGBOUNCER_DEFAULT_POOL_SIZE=20

# Backend
BACKEND_PORT=3000
DATABASE_URL=postgres://app:changeme@pgbouncer:6432/appdb

# Frontend
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:3000/api

# Object Storage (Wasabi S3)
WASABI_KEY=your-wasabi-key
WASABI_SECRET=your-wasabi-secret
WASABI_BUCKET=your-bucket
WASABI_REGION=us-east-1
WASABI_ENDPOINT=https://s3.wasabisys.com

# Discord Notifications (GitHub Actions Secrets)
# DISCORD_WEBHOOK=https://discord.com/api/webhooks/...

# SSH Deploy Credentials (GitHub Actions Secrets)
# STAGE_HOST=staging.example.com
# PROD_HOST=prod.example.com
# DEPLOY_USER=deploy
# SSH_PRIVATE_KEY=...
